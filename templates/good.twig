{% include 'header.twig' %}
<div class="row">
        <h2>Товар {{ good.name }}</h2>
        <table>
            <thead>
            <td>ID товара</td>
            <td>Наименование</td>
            <td>Цена</td>
            <td></td>
            </thead>
            <tbody>
                <tr>
                    <td><span>{{ good.id_good }}</span></td>
                    <td><span>{{ good.name }}</span></td>
                    <td><span>{{ good.price }}</span></td>
                    <td><button onclick="cart.add('{{ good.id_good  }}');">Купить</button></td>
                </tr>
            </tbody>
        </table>
</div>
<script>
    var cart = {
        'add' : function (id_good) {
            $.ajax({
                url: 'index.php?path=cart&action=add&asAjax',
                type: 'post',
                data: 'id_good=' + id_good,
                dataType: 'json',

                success: function(json) {

                    if (json['success']) {

                        alert(json['success']);
                    }
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
    }
    };
</script>
